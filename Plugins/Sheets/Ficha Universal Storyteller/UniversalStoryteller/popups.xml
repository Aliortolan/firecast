        <dataLink fields="{'atributo0XPGasto','atributo1XPGasto','atributo2XPGasto'}">
            <event name="onChange"><![CDATA[
                if sheet==nil then return end
                sheet.atributoXPGasto =   (tonumber(sheet.atributo0XPGasto) or 0) + 
